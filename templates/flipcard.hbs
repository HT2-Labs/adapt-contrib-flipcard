<div class="flipcard__inner component__inner" role="region" aria-label="{{_globals._components._flipcard.ariaRegion}}">
  {{> component this}}
    <div class="flipcard__widget component__widget clearfix">
      {{#each _items}}
        <div class="flipcard__item component__item item-{{@index}} {{_flipDirection}}">
          <div class="flipcard__item-face flipcard__item-front" role="button" aria-label="{{frontImage.alt}}">
            <img src="{{frontImage.src}}" class="flipcard__item-frontImage">
          </div>
          <div class="flipcard__item-face flipcard__item-back" role="button" aria-label="{{backTitle}} {{{compile backBody}}}">
            {{#if backTitle}}
              <div class="flipcard__item-back-title" role="heading" aria-live="polite">
                {{backTitle}}
              </div>
            {{/if}}
            {{#if backBody}}
              <div class="flipcard__item-back-body" aria-live="polite">
                {{{compile backBody}}}
              </div>
            {{/if}}
          </div>
       </div>
      {{/each}}
  </div>
</div>