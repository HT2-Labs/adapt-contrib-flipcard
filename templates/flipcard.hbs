<div class="flipcard__inner component__inner" role="region">
  {{> component this}}
    <div class="flipcard__widget component__widget clearfix">
      {{#each _items}}
        <button class="flipcard__item component__item item-{{@index}} {{_flipDirection}}" aria-label="{{frontImage.alt}}">
          <div class="flipcard__label-front" role="button">
            <div class="flipcard__item-face flipcard__item-front js-item-label" aria-hidden="true">
              <img src="{{frontImage.src}}" class="flipcard__item-frontImage">
            </div>
          </div>
          <div class="flipcard__label-back" role="button">
            <div class="flipcard__item-face flipcard__item-back a11y-ignore" aria-hidden="true">
              {{#if backTitle}}
                <div class="flipcard__item-back-title">
                  {{{backTitle}}}
                </div>
              {{/if}}
              {{#if backBody}}
                <div class="flipcard__item-back-body">
                  {{{compile backBody}}}
                </div>
              {{/if}}
            </div>
          </div>
       </button>
      {{/each}}
  </div>
</div>